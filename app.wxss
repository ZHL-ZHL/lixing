.weui-cell__hd {
  font-size: 26rpx;
  color: #333;
}

.footer {
  text-align: center;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  border-top: 1rpx solid #e1e1e1;
  padding: 0;
  line-height: 50rpx;
  z-index: 99;
}

.btn.save,
.btn.cencel {
  margin: 0;
  background: none;
  color: #333;
  border: 0px;
  width: 100%;
  font-weight: normal;
  padding: 0;
  border-radius: 0px;
  height: 100%;
  line-height: 100rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.online {
  display: inline-block;
  width: 40%;
  height: 100rpx;
  background: #ffe401;
  color: #333;
  font-size: 26rpx;
}

.onlineCall {
  display: inline-block;
  width: 60%;
  height: 100rpx;
  background: #ffad00;
  color: #333;
  font-size: 26rpx;
}

.allpayBtn {
  display: inline-block;
  width: 100%;
  height: 100rpx;
  background: #FFE400;
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}

.triangle {
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top-color: #343434;
  vertical-align: middle;
  position: absolute;
  top: 30rpx;
}

.btn.addBtn {
  color: #ffad00;
  border-color: #ffad00;
  background: none;
  width: 130rpx;
  line-height: 56rpx;
  border-radius: 3rpx;
  margin: 0 auto;

}

.card-title {
  text-align: center;
  border-bottom: 1rpx solid rgb(219, 219, 219);
  padding-bottom: 30rpx;
}

.card-content {
  padding: 20rpx 50rpx;
  line-height: 66rpx;
}

.card .card-content input {
  line-height: 40px;
  height: 40px;
  border-radius: 4px;
  background: #f8f8f8;
  border: 0px;
}

.card .btn {
  margin: 0;
  border-radius: 0px;
  border: 0px;
  height: 40px;
  line-height: 40px;
  margin-top: 20px;
  width: 100%;
  border-top: 1rpx solid #f8f8f8;
}

.card .btn.ok {
  background: #ffe401;
  border-bottom-right-radius: 8rpx;
}

.card .weui-cell {
  padding: 0px;
}

.no-content {
  width: 440rpx;
  margin: 150rpx auto;
  display: block;
  height: 320rpx;
}

.sheet-title {
  font-weight: bold;
  font-size: 26rpx;
  line-height: 60rpx;
}

.sheet-ititle {
  font-size: 24rpx;
  color: #ccc;
}

.sheet-ititle text {
  float: right;
}

.sheet-title text {
  color: #ff7800;
  vertical-align: minddle;
  margin-left: 10rpx;
  margin-top: 5rpx;
}

.sheet-content {
  width: calc(100% - 60rpx);
  margin: 0 auto;
  padding: 30rpx 0rpx;
  box-sizing: border-box;
}

.sheet-item-list {
  width: 24%;
  margin-right: 1%;
  height: 100rpx;
  background: #F2F6F9;
  color: #444;
  font-size: 24rpx;
  text-align: center;
  border-radius: 4rpx;
  line-height: 100rpx;
  display: inline-block;
  margin-bottom: 8rpx;
}

.sheet-item-list:nth-child(4n) {
  margin-right: 0;
}

.sheet-btn {
  width: 100%;
  background: #ffe401;
  color: #333;
  font-weight: bold;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}

.van-calendar__footer:empty+.van-calendar__footer {
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 0px;
  text-align: center;
}
.van-calendar__footer button{
  border-radius: 0px!important;
  background: #ffe401!important;
  width: 100%!important;
  text-align: center!important;
  color: #333!important;
  margin: 0 auto!important;
  height: 100rpx!important;
  line-height: 100rpx!important;
  border: 0px!important;
}
.van-calendar__day--end,.van-calendar__day--multiple-middle,.van-calendar__day--multiple-selected,.van-calendar__day--start,.van-calendar__day--start-end {
  background-color: #ffad00!important;
}  
.van-calendar__day--middle{
  background: rgba(255, 174, 0, .1);
  color: #333!important;
}

.kong {
  height: 52px;
}
.van-overlay{
  overflow-y: auto!important;
}


.putDownfood button.dialog-index--van-dialog__confirm.van-button--default {
  background: #FFE401 !important;
  color: #333 !important;
}

.van-dialog__button {
  width: 50%;
}


.dialog-content {
  padding: 50rpx 0rpx;
  text-align: center;
}



.scroll-view_H {
  white-space: nowrap;
  margin-bottom: 10px;
  padding: 5rpx;
}

.scroll-view-item_H {
  display: inline-block;
  width: 530rpx;
  height: 440rpx;
  /* background: #4d7ad2; */
  margin-left: 15px;
  position: relative;
  box-shadow: 0px 0rpx 10rpx 0px rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.scroll-view-item_H.demo-text-2 {
  box-shadow: none;
  height: 340rpx;
  width: 420rpx;
  border: 1px solid #f0f0f0;
}

.scroll-view-item_H:nth-last-child(1) {
  margin-right: 15px;
}

.scroll-view-item_H image {
  width: 100%;
  height: 230rpx;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  display: block;
}

.scroll-view-item_H.demo-text-2 image {
  height: 225rpx;
  border-radius: 20rpx;
}

.scroll-view-item_H.demo-text-2 .scroll-view-item_H-name {
  padding: 10rpx 30rpx 0rpx 30rpx;
}

.scroll-view-item_H-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 30rpx;
}

.scroll-view-item_H-address,
.scroll-view-item_H-price {
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.scroll-view-item_H-colorred {
  color: #ff5d78;
}

.scroll-view-item_H .name {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 364rpx;
  height: 34rpx;
  background: rgba(255, 255, 255, 0.07);
  text-align: center;
  color: #fff;
  font-size: 20rpx;
  line-height: 34rpx;
}