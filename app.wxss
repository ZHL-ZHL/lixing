/**app.wxss**/
@import "weui.wxss";


.container {
  font-size: 28rpx;
  color: #333;
}

.weui-cells:after,
.weui-cells:before,
.weui-cell:before {
  border: 0;
  border-top-color: #e1e1e1;
}

/* 
input::-webkit-input-placeholder {
  color: #ccc;
} */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.r_jt {
  width: 14rpx;
  height: 24rpx;
}

.mainColor {
  color: #ffe400;
}

.btn {
  width: 300rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 50px auto;
  border: 1rpx solid #515151;
  border-radius: 30rpx;
}

.txRight {
  text-align: right;
}

.flRight {
  float: right;
}

.txLeft {
  text-align: left;
}

.txOrange {
  color: #ff6000;
}

.weui-cell {
  padding: 30rpx;
}

.line {
  border: 5rpx solid #f4f4f5;
}

.placeholderClass {
  color: #ccc;
}

