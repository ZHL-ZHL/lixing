/* component/zyslider.wxss */
.container {
    /*height: 100%;*/
    width: 100%;
    position: relative;
}

.slider-body {
    height: 4rpx;
    background-color: #ddd;
    position: relative;
}

.body {
    bottom: 92rpx;
    background-color: #fff;
    z-index: 0.3;
}

.left {
    bottom: 90rpx;
    z-index: 0.1;
}

.right {
    z-index: 0.2;
    bottom: 94rpx;
}

.slider-item {
    border-radius: 50%;
    width: 60rpx;
    height: 60rpx;
    background-color: #fff;
    box-shadow: 0px 0px 5px #e1e1e1;
    z-index: 2;
    color: #EEEEEE;
    text-align: center;
    line-height: 60rpx;
}

.min {
    position: relative;
    top: 0rpx;
    /*left: 100rpx;*/
}

.max {
    position: relative;
    bottom: 60rpx;
    /*left: 600rpx;*/
}

.hide{
  display: none;
}