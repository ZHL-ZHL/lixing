<!--pages/busDetail/busDetail.wxml-->
<view class="container">
   <map class="map" 
   show-location
   longitude="{{longitude}}"
   latitude="{{latitude}}"
   markers="{{markers}}"
   polyline="{{polyline}}"
   includePoints="{{includePoints}}"
   ></map>
   <view class="weui-cell">
      <view class="weui-cell__bd">车牌号：{{busRegular.carPlate}}</view>
   </view>
   <view class="weui-cell">发车时间：{{busRegular.departureTime}}</view>
   <van-steps
    steps="{{ steps }}"
    active="{{ active }}"
    direction="vertical"
    active-color="#4D7AD2"
  />

</view>