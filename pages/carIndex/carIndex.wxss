/* pages/carIndex/carIndex.wxss */
/* @import "../visitorsList/visitorsList.wxss"; */
@import "../myOrder/myOrder.wxss";

.nav {
  padding: 10px 0;
  height: 60rpx;
  text-align: center;
  background: #fff;
  color: #777;
}

.nav .weui-cell__bd {
  font-size: 28rpx;
}

.weui-cell__bd.active {
  color: #333;
  font-size: 28rpx;
  position: relative;
}

.active::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  width: 140rpx;
  height: 1px;
  background: #CAAE43;
  bottom: -5px;
}

.thumb {
  display: inline-block;
  vertical-align: middle;
}

van-checkbox {
  display: inline-block;
  width: 20px;
  vertical-align: middle;
  margin-right: 5px;
  height: 20px;
}

.textPrice {
  color: #CAAE43;
  display: inline-block;
  width: 50%;
}

.textNum {
  float: right;
}

.tagBox van-tag {
  margin-right: 5px;
}

.textccc {
  font-size: 26rpx;
  margin: 5px 0;
}

.title {
  padding: 15px 15px 0px;
}

.online2 {
  width: 75%;
  background-color: #fff;
  color: #333333;
}

.onlineCall {
  width: 25%;
}

.online1 {
  width: 100%;
}



.emptyBox {
  width: calc(100% - 60rpx);
  margin: 20px auto;
  height: 480rpx;
  background-color: #fff;
  box-shadow: 0px 0px 5px #eeeeee;
  border-radius: 4px;
  box-sizing: border-box;
  padding-top: 20px;
}

.kbImg {
  display: block;
  width: 230rpx;
  height: 200rpx;
  margin: 0 auto;
}

.kbTitle {
  text-align: center;
  color: #999999;
  padding: 5px 0;
  font-size: 24rpx;
}

.btn-box {
  text-align: center;
}

.btn-text {
  display: inline-block;
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 4rpx solid #333333;
  margin: 20px 4%;
  border-radius: 50rpx;
  color: #333333;
  font-size: 28rpx;
}

.titlebox {
  position: relative;
}

.titlebox .titlename {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.titlebox image {
  display: block;
  position: absolute;
  bottom: -5rpx;
  left: 0;
  right: 0;
  margin: auto;
  height: 20rpx;
  width: 260rpx;
}

.infoList {
  width: 100%;
  margin: 20px auto;
}

.infoListItem {
  background-color: #fff;
  width: calc(100%/2 - 90rpx);
  box-shadow: 2px 3px 20px 0px rgba(0, 0, 0, 0.06);
  border-radius: 10px;
  /* margin:; */
}

.infoListIteml {
  margin-right: 30rpx;
}

.infoListItem image {
  display: block; 
  width: 180rpx;
  height: 360rpx;
  margin: 30rpx auto 0px;
}
.infoName{
  font-size: 26rpx;
}
.infoPrice{
  color: #CAAE43;
  font-size: 26rpx;
}
.infoListItem  image.carImg{
  display: inline-block;
  width: 74rpx;
  height: 74rpx;
  margin: 0;
}
.weui-cellp{
  padding: 30rpx 16rpx;
}