/* pages/carList/carList.wxss */

.goCarDetaillist {
  border: 1px solid #eee;
  padding: 15rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.companyCar {
  padding: 20rpx;
  height: 100%;
}

.carImage {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  vertical-align: middle;
  border: 1rpx solid #ccc;
  padding: 10rpx;
}

.carList {
  width: calc(100% - 225rpx);
  box-sizing: border-box;
  display: inline-block;
  vertical-align: middle;
  font-size: 26rpx;
  padding-left: 10rpx;
  line-height: 52rpx;
  position: relative;
}

.textMiddle text {
  display: inline-block;
  vertical-align: top;
}

.textMiddlelable {
  width: 144rpx;
}

.textMiddlecont {
  width: calc(100% - 144rpx);
}

.btnUseCar {
  background: rgba(0, 63, 132, 1);
  border-radius: 20rpx;
  color: #fff;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  padding: 0px 20rpx;
  font-size: 24rpx;
}
