.name span {
  display: inline-block;
  margin: 0 20rpx 0 0;
  font-size: 24rpx;
}

.picture {
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  vertical-align: middle;
}

.picture image {
  width: 100%;
  height: 100%;
}

.informationbox {
  display: inline-block;
  margin-left: 20rpx;
  width: calc(100% - 200rpx);
  vertical-align: middle;
}

.information {
  /* width: 400rpx; *//* position: relative; *//* left: 220rpx; *//* top: -200rpx; */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.name1, .name {
  border: 1px solid #eee;
  padding: 2vh;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.name1 span {
  display: inline-block;
  margin: 0 20rpx 0 0;
  font-size: 24rpx;
}

