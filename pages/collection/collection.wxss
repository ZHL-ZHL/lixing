/* pages/collection/collection.wxss */
.collection-img image{
  display: block;
  width: 94%;
  box-sizing: border-box;
  height: 280rpx;
  border-radius: 8rpx; 
  margin: 20rpx auto;
}
.detail-info-list{
  width:100%;
  padding-bottom: 20rpx;
  background: #fff;
}
.detail-info{
  text-align: left;
  width: 100%;
  padding:30rpx 30rpx 0rpx 30rpx;
  box-sizing: border-box;
}
.detail-info-title{
  display:inline-block;
  width:50%;
  margin-right:20rpx;
  vertical-align: middle;
  font-size: 28rpx;
}