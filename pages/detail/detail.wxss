/* pages/detail/detail.wxss */
.container,page{
  width:100%;
  height:100%;
}
.banner,.banner image,swiper{
  width: 100%;
  height: 400rpx;
  display: block;
}
.banner{
  position: relative;
}
.imageCount{
  position: absolute;
  right:10rpx;
  bottom:10rpx;
  background:rgba(0, 0, 0, .4);
  padding:0rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  color:#fff;
}
.detail-info-list{
  border-bottom: 1rpx solid #f0f0f0;
  width:100%;
  padding-bottom: 20rpx;
  background: #fff;
}
.detail-info{
  text-align: left;
  width: 100%;
  padding:30rpx 30rpx 0rpx 30rpx;
  box-sizing: border-box;
}
.detail-info-title{
  display:inline-block;
  width:50%;
  margin-right:20rpx;
  vertical-align: middle;
  font-size: 28rpx;
}
.detail-info-list-ul li{
  display: inline-block;
  width:63%;
  vertical-align: middle;
}

.order-form-bg{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .4);
  z-index: 9999;
  top:0;
  bottom:0;
  right: 0;
  left:0;
  margin:auto;
}
.formOrder{
  position: absolute;
  bottom: 0;
  display: block;
  width:100%;
  box-sizing: border-box;
  padding:20rpx 40rpx;
  background: #fff;
  font-size: 24rpx;
  color: #888
}

.formOrder .weui-cell{
  padding: 0rpx;
}
.formOrder input,.formOrder text,.formOrder radio-group,.formOrder picker{
  display: inline-block;
  vertical-align: middle;
  font-size: 24rpx;
}
.formOrder text{
  width:33%;
}
.borderbottom{
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 10rpx;
  margin-top:30rpx;
}
.formOrder input,.formOrder radio-group,{
  width:65%;
}
.formOrder picker{
  width:100%;
}
.formOrder picker text{
  vertical-align: bottom;
}
.detail-info-left,.detail-info-right{
  display: inline-block;
  vertical-align: middle;
  position:relative;
}
.detail-info-msg{
   position: absolute;
   width: 90rpx;
   height: 120rpx;
   border: 1px solid #ccc;
   margin-right: 20rpx;
   left: -60rpx;
   top:-80rpx;
   font-size: 20rpx;
   text-align: center;
}
.detail-info-msg-right{
  left: 60rpx;
}
.reviews textarea{
  display: block;
  margin: 20rpx auto;
  border:1rpx solid #f0f0f0;
  padding:20rpx;
  font-size: 24rpx;
  height: 150rpx;
  color: #363636;
}