<!--pages/distributionOrder/distributionOrder.wxml-->
<view class="container">  
  <view class="list">
    <view class="listItem" wx:for="{{list}}" wx:key="index">
       <view class="weui-cell">
          <view class="weui-cell__bd">运单编号：{{item.waybillId}}</view>
          <view class="weui-cell__ft txOrange">
            <text wx:if="{{item.loadingStatus==0}}">待提货</text>
            <text wx:if="{{item.loadingStatus==1}}">待配送</text>
            <text wx:if="{{item.loadingStatus==2}}">配送中</text>
            <text wx:if="{{item.loadingStatus==3}}">待装配</text>
            <text wx:if="{{item.loadingStatus==4}}">已完成</text>
          </view>
       </view>
       <view>
          <view class="weui-cell address" style="padding:0">
              <view class="weui-cell__bd txRight" >{{item.warehouseName}}</view>
              <view class="weui-cell__bd ">
                <image src="/images/u945.png" class="pjt"></image>
              </view>
              <view class="weui-cell__bd txLeft">{{item.customerAddrName}}</view>
          </view>
          <view class="driver">
            <view>司机：{{item.driver}}</view>
            <view wx:if="{{item.loadingStatus==4||item.loadingStatus==3}}">完成时间：{{item.ddTime}}</view>
          </view>
        </view>
    </view>
    
  </view>
</view>
