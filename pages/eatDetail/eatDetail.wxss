/* pages/eatDetail/eatDetail.wxss */ 
@import "/pages/eat/eat";
.eatDetail-top image {
  width: 100%;
  height: 360rpx;
  display: block;
}
.title{
  font-weight: bold;
  font-size: 28rpx;
}
.eatDetail-cont{
  box-sizing: border-box;
  width: 100%;
  padding:40rpx;

}
.eat-tag .van-tag{
color: #333;
margin-right: 10rpx;
}
.eat-tag-1 .van-tag{
  color: #FFAD00;
}
.eat-count{
  color: #999;
  font-size: 24rpx;
}
.chooseBtn {
  background-color: #FFE400;
  font-size: 26rpx;
  padding: 2rpx 16rpx;
  border-radius: 8rpx;
  color: #333333;
  position: relative;
}
.colorprice{
  color: #FF4D6B;
  font-size: 26rpx; 
  font-weight: bold;
}
.colorprice2{
  color: #FF4D6B;
  font-size: 24rpx; 
}
.colorPrice1{
  color: #999;
}
.eat-msg{
  font-size: 24rpx;
  color: #666;
}

.scroll-view_H {
  white-space: nowrap;
  margin-bottom: 10px;
  padding: 5rpx;
}

.scroll-view-item_H {
  display: inline-block;
  width: 530rpx;
  height: 440rpx;
  /* background: #4d7ad2; */
  margin-left: 15px;
  position: relative;
  box-shadow: 0px 0rpx 10rpx 0px rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.scroll-view-item_H.demo-text-2 {
  box-shadow: none;
  height: 380rpx;
  width: 360rpx;
  border: 1px solid #f0f0f0;
}
.scroll-view-item_H:first-child{
  margin-left:0px;
}
.scroll-view-item_H:nth-last-child(1) {
  margin-right: 15px;
}

.scroll-view-item_H image {
  width: 100%;
  height: 230rpx;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  display: block;
}

.scroll-view-item_H.demo-text-2 image {
  height: 225rpx;
  border-radius: 20rpx;
}

.scroll-view-item_H.demo-text-2 .scroll-view-item_H-name {
  padding: 10rpx 30rpx 0rpx 30rpx;
}

.scroll-view-item_H-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: #333;
  padding:2rpx 30rpx;
}

.scroll-view-item_H-address,
.scroll-view-item_H-price {
  font-size: 26rpx;
  color: #999;
  padding:0rpx 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.scroll-view-item_H-price{
  color: #FF4D6B;
  font-weight: bold;
}

.wrapper-showGG { 
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80%;
}
 