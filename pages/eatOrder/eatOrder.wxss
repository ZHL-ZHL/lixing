/* pages/eatOrder/eatOrder.wxss */
page{
  background: #f4f5f5;
}
.container .van-tabs__line {
  background-color: #4d7ad2;
}
.listItem{
  background: #fff;
  width: 690rpx;
  border-radius: 5px;
  margin: 10px auto;
}
.orderDetail::before{
  position: absolute;
  left: 15px;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #e1e1e1;
  top: 0;
}
.operation::before{
  position: absolute;
  left: 15px;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #e1e1e1;
  top: 0;
}
.thumb{
  width: 140rpx;
  height: 140rpx;
  display: block;
  margin-right: 15px;
}
.opeatBtn{
  line-height: 50rpx;
  text-align: center;
  border-radius: 30rpx;
  padding: 0 15px;
  display: inline-block;
  margin-left: 10px;
}
.blueBg{
  background: #4D7AD2;
  color: #fff;
}
.grayBg{
  border: 1rpx solid #333;
  color: #333;
}