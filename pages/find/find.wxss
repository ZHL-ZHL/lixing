/* pages/find/find.wxss */
@import "/pages/meetingRoom/meetingRoom.wxss";
.group .thumb{
  width:240rpx;
  height:240rpx;
  display: block;
  margin-right: 10px;
}
.group{
  align-items:start;
}
.caption{
  position: relative;
  height:240rpx;
}
.groupName{
  font-size:32rpx;
  font-weight:400;
  color:#4D7AD2;
}
.groupInfo{
  font-size:24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  position: absolute;
  left: 0;
  bottom: 0;
}
.divider{
  text-align: center;
  color: #4D7AD2;
  padding: 10rpx 0;
  position: relative;
  height: 50rpx;
  line-height: 50rpx;
}
.divider::before{
  content: "";
  position: absolute;
  top: 34rpx;
  left: 15px;
  right: 15px;
  height: 1rpx;
  margin: auto;
  background: #4D7AD2;
  z-index: -1;
}
.divider text{
  background: #fff;
  padding: 0 30px;
}