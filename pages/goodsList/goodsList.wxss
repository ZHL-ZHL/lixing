/* pages/goodsList/goodsList.wxss */
@import "../myOrder/myOrder.wxss";

.banner {
  margin: 0px auto;
}

.banner1 swiper {
  width: 750rpx;
  height: 300rpx;
  display: block;
}

.slide-image {
  width: 750rpx;
  height: 300rpx;
  display: block;
  margin: 0 auto;
}

.van-sidebar-item {
  padding-left: 4px;
  border: 0px !important;
  text-align: center;
}

.van-sidebar-item--selected {
  border: 0px !important;
  padding-left: 4px;
  position: relative;
}

.van-sidebar-item--selected::before {
  position: absolute;
  left: 0px;
  top: 50%;
  width: 4px;
  height: 30px;
  background-color: #EBD272;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  content: '';
  z-index: 1;
}

.van-grid-side {
  display: inline-block;
  width: 170rpx;
}

.side-content {
  display: inline-block;
  width: calc(100% - 170rpx);
  vertical-align: top;
}

.yuanjia {
  height: 30rpx;
}

.zhekou {
  color: #FF4D6B;
  font-size: 26rpx;
  font-weight: 400;
}

.thumb {
  width: 200rpx;
  height: 200rpx;
}

.caption {
  height: 200rpx;
}

.goodsName {
  margin-bottom: 30rpx;
}

.yuangjiatext {
  text-decoration: line-through;
  color: #999999;
  font-size: 24rpx;
}

.xiaoliang {
  float: right;
  color: #999999;
  font-size: 24rpx;
}

.cart image{
  width: 140rpx;
  height: 140rpx; 
  position: fixed;
  bottom: 45rpx;
  right: 20rpx; 
  align-items: center;
  display: block
}
 