/* pages/groupBuy/groupBuy.wxss */
.top-title image {
  width: 100%;
  display: block;
  height: 700rpx;
  margin: 0;
  padding: 0;
}

.cart image {
  width: 140rpx;
  height: 140rpx;
  position: fixed;
  bottom: 45rpx;
  right: 20rpx;
  align-items: center;
  display: block;
  z-index: 99;
}

.cart-num {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 3px solid #fff;
  text-align: center;
  background: #FF4D6B;
  color: #fff;
  right: -30rpx;
  top: -20rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  font-weight: bold;
}

.pricebox {
  width: 100%;
  height: 120rpx;
  background-color: #EBD272;
  margin-top: -2px;
  font-size: 24rpx;
  color: #555;
  line-height: 120rpx;
}

.pricebox image {
  display: inline-block;
  width: 60rpx;
  height: 70rpx;
  margin-left: 40rpx;
  float: left;
  margin-top: 20rpx;
}

.priceN {
  font-size: 40rpx;
  font-weight: 400;
  margin-left: 20rpx;
  color: #333;
}

.priceY {
  margin-left: 10rpx;
  text-decoration: line-through;
}

.pingt {
  float: right;
  margin-right: 40rpx;
  margin-top: 2px;
}

.titleName {
  width: calc(100% - 50rpx);
  margin: 0 auto;
  font-size: 26rpx;
  color: #333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.vag-bq {
  font-size: 26rpx;
  padding: 30rpx 30rpx 0rpx 30rpx;
}
 
.vag-bq .van-tag {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 180rpx;
  display: inline-block;
}
.imagelist image{
  display: block;
  width: 100%;
  height: 300rpx;
}
.kfBtn{
  width: 120rpx;
  background: #fff;
  color: #333;
  height: 100rpx;
  font-size: 24rpx;
}
.kfBtn image{
  display: block;
  width: 30rpx;
  height:30rpx;
  margin:20rpx auto 0;
}