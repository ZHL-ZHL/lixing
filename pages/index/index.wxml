  <view class="ads">
    <navigator url="/pages/repair/repair" hover-class="none">
      <image src="/images/banner1.jpg" mode="aspectFill"></image>
    </navigator>
  </view> -->
  <view class="kong"></view>
  <view></view>
  <!-- <view bindtap="scan">分享二维码</view> -->
</view>