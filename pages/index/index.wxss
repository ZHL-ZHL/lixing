/**index.wxss**/
page{
  background: #F8F8F8;
}
.header{
   color: #000;
   background: #FFE400;
   padding: 8px 15rpx;
}
.searchBar{
  border: 1rpx solid #e1e1e1;
  /* height: 60rpx; */
  margin: 0 15rpx;
  box-sizing: border-box;
  padding:8rpx 25rpx;
  color: #999;
  background: #fff;
  border-radius: 30rpx;
}
.header .weui-cell__ft{
  color: #fff;
}
.searchBar .weui-cell__ft{
  color: #999;
}
.banner{
  margin:10px auto;
}
.banner swiper{
  width:750rpx;
  height:275rpx;
  display: block;
}
.slide-image {
  width:710rpx;
  height:260rpx;
  display: block;
  margin: 0 auto;
}
.nav{
  /* padding: 10px 0; */
}
.nav swiper{
  height: 250rpx;
}
.iconimage{
  width: 90rpx;
  height: 90rpx;
  display: block;
  margin: 10rpx auto;
}
.navItem{
  width: 20%;
  display: inline-block;
  text-align: center;
  margin-bottom: 10px;
  line-height: 1;
}
.iconName{
  font-size: 22rpx;
  color: #333;
}
.circle{
  text-align: center;
  line-height: 1;
}
.cricleItem{
  width: 50px;
  height: 3px;
  background: #E5E5E5;
  display: inline-block;
}
.active{
  background: #4D7AD2;
}
.ads image{
  width: 690rpx;
  height: 190rpx;
  display: block;
  margin: 0 auto;
}
.kong{
  height: 20px;
}
.line{
  width:750rpx;
  height:10rpx;
  background:#E5E5E5;
}
.email{
  display: block;
  width:57rpx;
  height:57rpx;
}
.adr{
  width:48rpx;
  height:48rpx;
  display: block;
}
.fixed{
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1024;
}
.cu-bar{
  background: linear-gradient(90deg, #FFE400 , #FFD200);
  box-sizing: border-box;
}
.cu-custom .cu-bar {
  min-height: 0px;
  padding-right: 220rpx;
  box-shadow: 0rpx 0rpx 0rpx;
  z-index: 9999;
}
.content .weui-cell{
  box-sizing: border-box;
  padding: 0;
  padding-left: 30rpx;
}
.address{
  color: #000;
  margin-right: 10px;
}
.content input{
  background: #fff;
  border-radius: 5px;
  padding: 5rpx;
  font-size: 22rpx;
  padding-left: 10px;
}
.news{
  margin-left: 10px;
  width: 34rpx;
  height: 34rpx;
  display: block;
}
.cart{
  width:100rpx;
  height:100rpx;
  box-shadow:2rpx 3rpx 15rpx 0px rgba(0, 0, 0, 0.1);
  border-radius:50%;
  position: fixed;
  bottom: 45rpx;
  right: 42rpx;
  border: 10rpx solid #fff;
  background:linear-gradient(180deg,rgba(255,231,30,1),rgba(255,210,0,1));
  align-items: center;
}
.cart image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
}