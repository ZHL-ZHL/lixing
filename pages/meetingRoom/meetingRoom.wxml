	<!-- 精准查找 -->
	<!-- bind:close="onClose" round="true" close-on-click-overlay="true" -->
	<view wx:if="{{ showAccurateSearch }}" bindtap="closeAccurateSearch" title="精准查找" class="showAccurateSearch">
		<view class="searchBox" catchtap="stopAccurateSearch">
			<view class="sheet-content">
				<view class="sheet-title">价 格 <text>￥{{lowHeigh}}</text></view>
				<view>
					<view class="zy-slider">
						<zy-slider id="zy-slider" backgroundColor="#EEEEEE" selectedColor="#FFAE00" minValue="{{low}}" maxValue="{{heigh}}" min="0" max="10000" bind:lowValueChange="lowValueChangeAction" bind:heighValueChange="heighValueChangeAction" />
					</view>
				</view>
				<view class="sheet-ititle">￥0 <text>￥10000以上</text></view>
				<view style="padding-left:1%">
					<view class="sheet-item-list" wx:for="{{priceList}}" wx:key="index">￥{{item}} <text wx:if="{{index == priceList.length-1}}">以上</text></view>
				</view>
			</view>

			<view class="sheet-content">
				<view class="sheet-title">面 积<text>{{lowHeigh1}}m²</text></view>
				<view class="sheet-ititle">0 <text>1000以上</text></view>
				<view>
					<view class="zy-slider">
						<zy-slider id="zy-slider1" minValue="{{low1}}" maxValue="{{heigh1}}" min="0" max="1000" backgroundColor="#EEEEEE" selectedColor="#FFAE00" bind:lowValueChange="lowValueChangeAction1" bind:heighValueChange="heighValueChangeAction1" />
					</view>
				</view>
				<view style="padding-left:1%">
					<view class="sheet-item-list" wx:for="{{areaList}}" wx:key="index">{{item}}m²<text wx:if="{{index == areaList.length-1}}">以上</text></view>
				</view>
			</view>

			<view class="sheet-content">
				<view class="sheet-title">参会人数<text>{{lowHeigh2}}人</text></view>
				<view class="sheet-ititle">0 <text>1000人以上</text></view>
				<view>
					<view class="zy-slider">
						<zy-slider id="zy-slider2" minValue="{{low2}}" maxValue="{{heigh2}}" min="0" max="1500" backgroundColor="#EEEEEE" selectedColor="#FFAE00" bind:lowValueChange="lowValueChangeAction2" bind:heighValueChange="heighValueChangeAction2" />
					</view>
				</view>
				<view style="padding-left:1%">
					<view class="sheet-item-list" wx:for="{{perpleList}}" wx:key="index">{{item}}人<text wx:if="{{index == perpleList.length-1}}">以上</text></view>
				</view>
			</view>

			<view class="sheet-btn" catchtap="subAccurateSearch">完成</view>
		</view>
	</view>
	<!-- 搜索关键词 -->
	<view class="show-main" hidden="{{showMain}}">
		<van-search value="{{ searchvalue }}" placeholder="请输入搜索关键词" bind:change="onChange" show-action bind:search="onSearch" bind:cancel="onCancel" />
		<view class="show-mian-box">
			<view class="show-main-title">
				<image src="../../images/icon1/nav1.png"></image>
				大家都在搜
			</view>
			<view class="show-main-cont">
				<text wx:for="{{keywordList}}" wx:key="index" bindtap="keywordBtn" id="{{item}}">{{item}}</text>
			</view>
		</view>
