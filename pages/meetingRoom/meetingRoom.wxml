	<!-- 日期查找 -->
	<van-action-sheet show="{{ showdate }}" title="选择日期" bind:close="ondateClose" round="true" close-on-click-overlay="true">
		<view class="searchBox">
			<view>
				<van-calendar show="{{ showdate }}" type="range" bind:close="ondateClose" bind:confirm="onConfirm" />
			</view>
			<!-- <view class="sheet-btn">完成</view> -->
		</view>
	</van-action-sheet>


	<!--时间查找  -->
	<van-action-sheet class="height300" show="{{ showTime }}" title="选择时间" bind:close="ondateClose1" round="true" close-on-click-overlay="true">
		<view class="searchBox1">
			<view>
				<van-datetime-picker type="time" value="{{ currentDate }}" />
			</view>
		</view>
	</van-action-sheet>
	<van-action-sheet class="height300" show="{{ showTime2 }}" title="选择时间" bind:close="ondateClose2" round="true" close-on-click-overlay="true">
		<view class="searchBox1">
			<view>
				<van-datetime-picker type="time" value="{{ currentDate2 }}" />
			</view>
		</view>
	</van-action-sheet>
