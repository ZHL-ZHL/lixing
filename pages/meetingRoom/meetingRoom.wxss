/* pages/meetingRoom/meetingRoom.wxss */
.banner swiper,.banner .slide-image{
  width:750rpx;
  height:400rpx;
  display: block;
}
.divider{
  text-align: center;
  color: #4D7AD2;
  padding: 10rpx 0;
  position: relative;
  height: 50rpx;
  line-height: 50rpx;
}
.divider::before{
  content: "";
  position: absolute;
  top: 34rpx;
  left: 15px;
  right: 15px;
  height: 1rpx;
  margin: auto;
  background: #4D7AD2;
  z-index: -1;
}
.divider text{
  background: #fff;
  padding: 0 30px;
}
.scroll-view_H{
  white-space: nowrap;
  margin-bottom: 10px;
}
.scroll-view-item_H {
  display: inline-block;
  width: 366rpx;
  height: 186rpx;
  background: #4D7AD2;
  margin-left: 15px;
  position: relative;
}
.scroll-view-item_H:nth-last-child(1){
  margin-right: 15px;
}
.scroll-view-item_H image{
  width: 366rpx;
  height: 186rpx;
  display: block;
}
.scroll-view-item_H .name{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width:364rpx;
  height:34rpx;
  background:rgba(255,255,255,0.07);
  text-align: center;
  color: #fff;
  font-size: 20rpx;
  line-height: 34rpx;

}
.meetingList .thumb{
  width:200rpx;
  height:200rpx;
  background:rgba(0,63,132,1);
  display: block;
  margin-right: 15px;
}
.meetingList .price{
  font-size:26rpx;
  font-weight:400;
  color:#FF7800;
}
.meetingList .name{
  font-size:28rpx;
  font-weight:400;
}
.meetingList .adr{
  font-size:24rpx;
  font-weight:400;
  color:#666;
  margin-top: 16px;
  margin-bottom: 10px;
}
.meetingListItem::after{
  position: absolute;
  content: "";
  left: 15px;
  right: 15px;
  bottom: 0;
  border-bottom:1rpx solid #4D7AD2;
  height: 1rpx;
}
.meetingListItem:nth-last-child(1)::after{
  border: none;
}
.meetingListItem:nth-child(1){
  padding-top: 0;
}