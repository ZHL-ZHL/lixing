.orderList image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 10rpx auto;
}

.line {
  width: 630rpx;
  height: 5px;
  background: #e1e1e1;
  margin: 10rpx auto;
}

.list button:not([size='mini']) {
  /* height: 40px; */
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  height: 160rpx;
  border: 0px
}

.list {
  padding: 15px;
  box-shadow: 0px 0px 5px #e1e1e1;
  width: 690rpx;
  box-sizing: border-box;
  margin: 10px auto;
  background: #fff;
  border-radius: 10rpx;
}

.list button {
  width: 690rpx;
  font-weight: normal;
  background-color: transparent;
  font-size: 28rpx;
  box-sizing: border-box;
  text-align: left;
  border-radius: 0;
  border-bottom: 1rpx solid #e1e1e1;
}

.listItem {
  padding-left: 0;
}

.btn {
  width: calc(100% - 60rpx);
  line-height: 80rpx;
  text-align: center;
  border: 0px;
  box-shadow: 0px 0px 5px #e1e1e1;
  border-radius: 8rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.navIcon {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 20rpx auto;
}

button {
  background: transparent;
  font-weight: normal;
}

button::after {
  /* border: none;
  height: 0px; */
}

.allOrder {
  padding: 20rpx 30rpx 0rpx 30rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.order .allOrder button {
  padding: 0;
  font-size: 24rpx;
  color: #ccc;
  text-align: right;
  min-height: 40rpx;
}

.orderList button {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 0;
}

.phoneBox {
  border-radius: 20rpx;
  background: #fff;
  width: 690rpx;
  margin: 0 auto;
  box-sizing: border-box;
}

button.getPhone {
  border: 1px solid #999;
  width: 116rpx !important;
  min-height: 40rpx;
  height: 56rpx;
  line-height: 56rpx;
  float: right;
  padding: 0px;
  font-size: 28rpx;
  color: #333;
}

.tanBd {
  width: 580rpx;
  height: 250rpx;
  background: rgba(255, 255, 255, 0.96);
  border-radius: 10rpx;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: 10001;
}

.tanBdCon {
  height: 160rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  padding: 15px;
  box-sizing: border-box;
}

.tanBd button {
  height: 90rpx;
  border-top: 1rpx solid #ddd;
  font-size: 28rpx;
  padding: 0;
  text-align: center;
  line-height: 90rpx;
  font-weight: 500;
  color: #4d7ad2;
  border-radius: none;
  width: 100%;
}

.tanBd butto::after {
  border: none;
}

.maskk {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background: rgba(51, 51, 51, 0.9)
}

.list button.listItem {
  width: 25%;
  display: inline-block;
  text-align: center;
  font-size: 24rpx;
  padding: 0;
  margin: 0;
}