/* pages/my/my.wxss */
page {
  height: 100%;
  background: #f8f8f8;
}

.bgblue {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200px;
  background: #FFE400;
  z-index: -1;
}

.userINfo {
  width: 690rpx;
  /* background: #fff; */
  box-sizing: border-box;
  margin: 10px auto;
  border-radius: 15px;
}

button.noLogin {
  box-sizing: border-box;
  width: 690rpx !important;
  /* background: #fff; */
  border-radius: 15px;
  margin-top: 10px;
}

button.noLogin image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10px;
  display: block;
  border: 3px solid #fff;
  border-radius: 100px;

}

.avatar,
.avatar image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 15px;
  display: block;
}

.nickname {
  font-size: 30rpx;
  font-weight: 600;
}

.phone {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.order {
  width: 690rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 10px auto;
  box-shadow: 0px 0px 5px #e1e1e1;
}

.orderList {
  text-align: center;
  padding: 0rpx 30rpx 30rpx 30rpx;
}

