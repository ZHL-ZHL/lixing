/* pages/myadr/myadr.wxss */
.edit{
  width: 35rpx;
  height: 35rpx;
}
.list{
  display:flex;
  justify-content:space-between;
  width:100%;
  overflow:hidden;
  margin: 10px auto;
}
.adrList{
  padding: 2rpx 15px;
  box-sizing: border-box;
  width:100%;
  margin-right:0;
  -webkit-transition:all 0.4s;
  transition:all 0.4s;
  -webkit-transform:translateX(120rpx);
  transform:translateX(120rpx);
  margin-left:-120rpx;
}
.adrList .adrItem{
  width:690rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 10rpx 0px rgba(0, 0, 0, 0.06);
  border-radius:10rpx;
  box-sizing: border-box;
}
.edit{
  position: relative;
  z-index: 10001;
}
.adrItem .weui-cell__bd{
  font-size:28rpx;
  color:rgba(51,51,51,1);
  padding-left: 56rpx;
}
.adrXq text{
  width:60rpx;
  background:rgba(255,120,0,0.28);
  border-radius:10rpx;
  display: inline-block;
  line-height: 30rpx;
  text-align: center;
  color: #FD7600;
  font-size:20rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.userInfo{
  padding-bottom: 10rpx;
}
.adrItem .weui-cell__hd{
  font-size:30rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.adrItem .adrXq{
  padding: 0 15px;
  font-size:27rpx;
  color:#333;
  padding-bottom: 15px;
  padding-right: 45rpx;
}
.delete {
  width:120rpx;
  background:#FD7600;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  color:#fff;
  -webkit-transform:translateX(120rpx);
  transform:translateX(120rpx);
  -webkit-transition:all 0.4s;
  transition:all 0.4s;
  font-size:30rpx;
}
.delete image{
  width: 45rpx;
  height: 50rpx;
  vertical-align: middle;
}
.weui-media-box__hd_in-appmsg{
  width:250rpx;
  height:250rpx;
  background:rgba(255,195,195,1);
  border-radius:10rpx; 
}

.weui-media-box__hd_in-appmsg .weui-media-box__thumb{
  width:250rpx;
  height:250rpx;
  display: block;
}
.touch-move-active .adrList,.touch-move-active .delete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.weui-media-box_appmsg {
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:top;
  -webkit-align-items:flex-start;
  align-items:flex-start;
}
.weui-media-box_appmsg .weui-media-box__desc{
  font-size:28rpx;
  font-weight:500;
  line-height: 35rpx;
  height: 70rpx;
  color:rgba(53,53,53,1)
}
.foot_btn{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-bottom: 20rpx;
}
.foot_btn .btn{
  width:640rpx;
  height:90rpx;
  background:#4D7AD2;
  border-radius:45px;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  margin: 0 auto;
  border: none;
}
.foot_btn .btn image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.queS{
  width: 375rpx;
  height:375rpx;
  margin: 150rpx auto;
  display: block;
}