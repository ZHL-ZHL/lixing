/* pages/myCollectList/myCollectList.wxss */
page{
  background: #f4f4f5;
}
.weui-media-box__hd_in-appmsg {
  width: 160rpx;
  height: 160rpx;
}
.goods_name{
  font-weight:bold;
}
.price{
  font-size:22rpx;
  color:rgba(255,120,0,1);
  line-height:36rpx;
}
.info{
  font-size:22rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:36rpx;
  margin-bottom: 10rpx;
}
/* pages/myCollect/myCollect.wxss */
.listItem{
  font-size:14px;
  display:flex;
  justify-content:space-between;
  border-bottom:1rpx solid #ddd;
  width:100%;
  overflow:hidden;
  background: #fff;
}
.collItem{
  width:100%;
  margin-right:0;
  -webkit-transition:all 0.4s;
  transition:all 0.4s;
  -webkit-transform:translateX(90px);
  transform:translateX(90px);
  margin-left:-90px;
}
.delete {
  width:60px;
  background:rgba(255,120,0,1);
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  color:#fff;
  -webkit-transform:translateX(90px);
  transform:translateX(90px);
  -webkit-transition:all 0.4s;
  transition:all 0.4s;
  font-size:30rpx;
}
.touch-move-active .collItem,.touch-move-active .delete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.weui-media-box_appmsg {
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:top;
  -webkit-align-items:flex-start;
  align-items:flex-start;
}
.weui-media-box_appmsg .weui-media-box__desc{
  font-size:28rpx;
  font-weight:500;
  line-height: 35rpx;
  height: 70rpx;
  color:rgba(53,53,53,1)
}
.userNum{
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height: 1;
  margin-top: 25rpx;
}
.queS{
  width: 375rpx;
  height: 375rpx;
  display: block;
  margin:150rpx auto;
}
.repairItem{
  width: 50%;
  padding: 0 15px;
  box-sizing: border-box;
  display: inline-block;
  margin-top: 10px;
}
.repairItem image{
  height: 201rpx;
  display: block;
  width: 100%;
}
.repairItem .like{
  color: #ff0000;
}
.repairItem .caption{
  padding: 10px;
  background: #fff;
}