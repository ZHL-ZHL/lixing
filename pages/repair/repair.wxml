<!--pages/repair/repair.wxml-->
<view class="container">
   <view class="banner">
     <swiper 
      indicator-dots="{{indicatorDots}}"  
      indicator-color="{{indicatorColor}}" 
      indicator-active-color="{{indicatorActiveColor}}" 
      autoplay="{{autoplay}}" 
      interval="{{interval}}" 
      duration="{{duration}}" 
      circular="true">  
      <block wx:for="{{banner}}" wx:key="{{index}}">  
          <swiper-item>  
            <view data-item="{{item}}" hover-class="none" bindtap="toAdvDeatil">  
              <image src="{{item.picture}}" class="slide-image" mode="aspectFill"/>  
            </view>  
          </swiper-item>  
      </block>  
    </swiper>
   </view>
   <view class="list">
       <navigator class="listItem" hover-class="none" url="/pages/repairDetail/repairDetail?id={{item.maintenanceId}}" wx:for="{{repairList}}" wx:key="index">
         <view class="thumb">
            <image src="{{onLine+item.maintenancePicture}}"></image>
         </view>
         <view class="caption">
            {{item.maintenanceName}}<text>ï¿¥{{item.maintenancePrice}}</text>
         </view>
       </navigator>
      
   </view>
   <view class="car">
      <button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="toCar" >
        <image src="/images/car.png"></image>
      </button>
   </view>
</view>
