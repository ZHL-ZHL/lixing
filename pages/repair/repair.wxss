/* pages/repair/repair.wxss */
.banner{
  width:690rpx;
  height:370rpx;
  margin: 10px auto;
}
.banner swiper,.banner .slide-image{
  width:690rpx;
  height:370rpx;
  display: block;
}
.listItem{
  float: left;
  width:315rpx;
  margin:10rpx 30rpx;
}
.listItem .thumb image{
  width:100%;
  height:201rpx;
  background:rgba(0,63,132,1);
  display: block;
}
.caption{
  padding-top: 5rpx;
  font-size:31rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.caption text{
  color: #FF7E00;
  font-size: 20rpx;
}
.car{
  width:96rpx;
  height:90rpx;
  background:rgba(242,241,241,1);
  border-radius:45rpx 0px 0px 45rpx;
  position: absolute;
  right: 0;
  bottom: 462rpx;
  z-index: 111;
  box-sizing: border-box;
}
.car image{
  width: 53rpx;
  height: 53rpx;
  display: block;
  margin: 0 auto;
}
.car button{
  padding: 0;
  background: transparent;
  width:96rpx;
  height:90rpx;
  margin: 0 ;
  padding-top: 18rpx;
  padding-right: 5rpx;
}