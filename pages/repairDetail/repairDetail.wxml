<!--pages/repairDetail/repairDetail.wxml-->
<view class="container">
   <view class="banner">
    <image src="{{onLine+maintenance.maintenancePicture}}"></image>
   </view>
   <view class="weui-cell title">
      {{maintenance.maintenanceName}} <text>￥{{maintenance.maintenancePrice}}</text>
   </view>
   <view class="repairInfo">
     <view class="repairInfoTitle">服务宗旨：</view>
     <view>1、销售商品，以旧换新费用单独核算 </view>
     <view>2、销售商品，以旧换新费用单独核算</view>
     <view>2、销售商品，以旧换新费用单独核算</view>
     <view>2、销售商品，以旧换新费用单独核算</view>
     <view>2、销售商品，以旧换新费用单独核算</view>
   </view>
   <view class="kong"></view>
   <view class="footer weui-cell">
      <view class="weui-cell__bd">
         <image src="/images/icon/share.png" class="share"></image>
         分享
      </view>
      <view class="weui-cell__bd" wx:if="{{userInfo}}">
         <view bindtap="toCollect">
            <van-icon name="like" size="26rpx" color="#ff0000" wx:if="{{favorite}}"/>
            <van-icon name="like-o" size="26rpx"  wx:else />
         </view>
         收藏
      </view>
      <view class="weui-cell__bd">
        <view><van-icon name="phone-o" size="26rpx"/></view>
        电话
      </view>
      <view class="weui-cell__ft">
         <view class="submit">
             <view class="ql" >
               <button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="getuser" data-type="1">加入购物车</button>
             </view>
             <view class="sl">
               <button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="getuser" data-type="2">立即预约</button>
             </view>
         </view>
      </view>
   </view>
</view>
