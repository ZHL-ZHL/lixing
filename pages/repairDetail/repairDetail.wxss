/* pages/repairDetail/repairDetail.wxss */
.banner{
  width:690rpx;
  height:290rpx;
  background:rgba(3,94,171,1);
  margin: 10px auto;
}
.banner image{
  width:690rpx;
  height:290rpx;
  display: block;
}
.title{
  border-bottom: 1rpx solid #e1e1e1;
}
.title text{
  color: #FF6000;
  font-size: 24rpx;
  padding-left: 10px;
}
.repairInfo{
  color: #333;
  font-size: 24rpx;
  padding: 10px 15px;
  line-height: 2;
}
.repairInfoTitle{
  font-size: 2rrpx;
}
.submit{
  width:400rpx;
  height:60rpx;
}
.submit view{
   width:200rpx;
   height:60rpx;
   line-height: 60rpx;
   float: left;
   text-align: center;
   font-size: 28rpx;
}
.submit view,.submit view button{
   width:200rpx !important;
   height:60rpx;
   line-height: 60rpx;
   float: left;
   text-align: center;
   font-size: 28rpx;
   padding: 0;
}
.footer button:not([size='mini']) {
  min-height:47rpx;
  width:295rpx;
  margin-left: auto;
  margin-right: auto;
}
.footer button{
  background:rgba(0,63,132,1);
  font-weight: normal;
  color: #fff;
  border-radius:20rpx;
  font-size: 30rpx;
  padding:0;
}
.submit .ql button{
  background:rgba(90,166,230,1);
  border-radius:30rpx 0px 0px 30rpx;
  color: #333;
}
.submit .sl button{
  background:rgba(0,63,132,1);
  border-radius:0px 30px 30px 0px;
  color: #fff;
}
.footer{
  font-size: 20rpx;
  text-align: center;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  border-top: 1rpx solid #e1e1e1;
  padding-left: 0;
}
.share{
  width:24rpx;
  height: 27rpx;
  display: block;
  margin: 4rpx auto;
}
.van-icon{
  display: block;
}
