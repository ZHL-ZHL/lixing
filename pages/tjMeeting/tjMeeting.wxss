/* pages/tjMeeting/tjMeeting.wxss */
/* @import "/pages/eatListPay/eatListPay.wxss"; */
page{
  background: #f8f8f8;
  height: 100%;
}
.adr {
  font-size: 26rpx;
}
 
.addressInfo {
  margin-top: 10rpx;
}

.zs {
  width: 100%;
  height: 10rpx;
  display: block;
}

.thumb {
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin-right: 10px;
}

.goodsInfo {
  box-shadow: 0px 0px 5px #e1e1e1;
  width: calc(100% - 40rpx);
  margin: 20px auto;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.goodsInfo .name {
  font-size: 28rpx;
}

.goodsInfo .info {
  font-size: 24rpx;
  color: #666;
  padding-top: 20rpx;
}

.list {
  font-size: 26rpx;
  box-shadow: 0px 0px 5px #e1e1e1;
  width: calc(100% - 40rpx);
  margin: 20px auto;
  border-radius: 8rpx;
}

.yhq::before {
  content: "";
  position: absolute;
  left: 15px;
  right: 0;
  top: 0;
  border-top: 1rpx solid #e1e1e1;
  height: 1px;
}

.list .weui-cell::before {
  content: "";
  position: absolute;
  left: 15px;
  right: 15px;
  top: 0;
  border-top: 1rpx solid #e1e1e1;
  height: 1px;
}

.line {
  width: 100%;
  height: 5px;
  background: #e1e1e1;
}

textarea {
  width: calc(100% - 40rpx);
  height: 200rpx;
  margin: 0 auto;
  /* border: 1rpx solid #e1e1e1; */
  padding: 10rpx;
  box-sizing: border-box;
}

.btn {
  background: #4D7AD2;
  color: #fff;
  border: none;
}

.plus {
  text-align: center;
  line-height: 150rpx;
  box-shadow: 0px 0px 5px #e1e1e1;
  width: calc(100% - 40rpx);
  margin: 20px auto;
  border-radius: 8rpx;
}

.add {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  margin-right: 10px;
}
.nav-add-address{
  color: #FF4D6B;
  font-weight: bold;
  padding-top: 40rpx;
}
.nav-add-address,
.nav-ccc-address {
  line-height: 50rpx;
  font-size: 26rpx;
}
.nav-ccc-address {
  color: #999;
  padding-bottom: 40rpx;
  font-size: 24rpx;
}
.mainColor{
   width: calc(100% - 40rpx);
   margin:0 auto;
   background: #fff;
   padding: 30rpx;
   box-sizing: border-box;
   color: #333;
   box-shadow: 0px 0px 5px #e1e1e1;
}


.weui-cell__ft{
  color: #555;
  font-size:26rpx;
}
.weui-cell-bg {
  height: 180rpx;
  padding: 8px 15px;
  color: #fff;
  position: relative;
}

.weui-cellR {
  text-align: center;
  width: 35%;
  color: #fff;
  font-size: 50rpx;
  font-style: oblique;
}

.weui-cellL {
  text-align: center;
  width: 65%;
  font-size: 26rpx;
}
.checkImg {
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  right: 31%;
  display: block;
  width: 20px;
  height: 20px;
}
.bottom-bg{
  position: absolute;
  width: 92%;
  height: 87%;
  z-index: -1;
}