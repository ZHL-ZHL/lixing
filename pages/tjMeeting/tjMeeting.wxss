}
.adr .name text{
   float: right;
}
.addressInfo{
  margin-top: 10rpx;
}
.zs{
  width: 100%;
  height: 10rpx;
  display: block;
}
.thumb{
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin-right: 10px;
}
.goodsInfo{
  padding: 15px;
}
.goodsInfo .name{
  font-size: 28rpx;
}
.goodsInfo .info{
  font-size: 24rpx;
